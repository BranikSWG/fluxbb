#!/usr/bin/env php
<?php

use Symfony\Component\Console\Application;

$app = require __DIR__.'/bootstrap/start.php';

// TODO: Remove this!
$app->bind('FluxBB\Web\UrlGeneratorInterface', 'FluxBB\Web\UrlGenerator');

/*
 * Set up the console application.
 */
$app->instance('console', $console = new Application());
$app->register('FluxBB\Console\ConsoleServiceProvider');
$app->register('FluxBB\Installer\Console\ConsoleServiceProvider');

$app->boot();

/*
 * Run and exit with the response status code.
 */
$status = $console->run();

exit($status);
